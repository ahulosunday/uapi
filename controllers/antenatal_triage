const { users, patient,antenatal_account,visits, antenatal_triage, sequelize } = require('../models');
const {getPagination, getPagingData} = require('../helpers/paging')
const { Op } = require('sequelize');

const getOne = async(req, res)=>{
    try{
        const Id = req.params.id
     const data = await antenatal_triage.findOne(
        { include:[users, patient, visits, antenatal_account],
            where:{ id: Id},
            order:[['id','ASC']]
        }
     )
     return res.status(200).json(data)
    }
    catch(err){
        return res.status(500).json({err: err.message})
    }
}
const getOneByVisit = async(req, res)=>{
    try{
        const Id = req.params.visit_id
     const data = await antenatal_triage.findAll(
        { include:[users, patient, visits, antenatal_account],
            where:{ visit_id: Id},
            order:[['id','ASC']]
        }
     )
     return res.status(200).json(data)
    }
    catch(err){
        return res.status(500).json({err: err.message})
    }
}
const getAll = async(req, res)=>{
    try{
        const patient_id = req.params.patient_id
     const data = await antenatal_triage.findAll(
        { include:[users, patient, visits, antenatal_account],
            where:{ patient_id: patient_id},
            order:[['id','ASC']]
        }
     )
     return res.status(200).json(data)
    }
    catch(err){
        return res.status(500).json({err: err.message})
    }
}

const viewByPatientId = async(req, res)=>{
    try{

        const Id = req.params.patient_id
        const data = await antenatal_triage.findOne(
           {  include:[users, patient, visits, antenatal_account],
               where: {
                patient_id: Id,

               },
               order:[['id','ASC']]
           }
        )
        return res.status(200).json(data)
    }catch(err){
        return res.status(500).json({err: err.message})
    }
}
const add = async(req, res)=>{
    try{
     const ad =  await antenatal_triage.create(req.body)
       return res.status(200).json(ad)
    }catch(err){
        return res.status(500).json({err: err.message})
    }
}

const updates = async(req, res)=>{
    try{
    
        const up = await antenatal_triage.update({
           // patient_id: req.body.patient_id,
    //ante_natal_id: req.body.ante_natal_id,
    //visit_id: req.body.visit_id,
    weight: req.body.weight,
    height: req.body.height,
    body_mass_index: req.body.body_mass_index,
    urinalysis_protein: req.body.urinalysis_protein,
    urinalysis_glucose: req.body.urinalysis_glucose,
    pallor: req.body.pallor,
    blood_pressure: req.body.blood_pressure,
    maturity: req.body.maturity,
    oedema: req.body.oedema,
    presentation: req.body.presentation,
    foetal_heart_rate: req.body.foetal_heart_rate,
    fundal_height: req.body.fundal_height,
    rvst: req.body.rvst,
    comments: req.body.comments,
    next_appointment_date: req.body.next_appointment_date,
    staff_id: req.body.staff_id
        },
     {
         where:{
             id: req.body.id
         }
     })
     
     return res.status(200).json(up)
     }
     catch(err){
         return res.status(500).json({err: err.message})
     }
}
const deletes = async(req, res)=>{
    try{
        const id = req.params.id
      const del = await antenatal_triage.destroy({
        where: {
            id: id,
          },
      })
      return res.status(200).json(del)
      
    }
    catch(err){
        return res.status(500).json({err: err.message})
    }
}


module.exports={
    getAll,
    getOne,
    viewByPatientId,
    add, 
    updates,
    deletes,
    getOneByVisit 

}